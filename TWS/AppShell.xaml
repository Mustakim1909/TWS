<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TWS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TWS.Views"
    xmlns:local="clr-namespace:TWS"
    Shell.FlyoutBehavior="Disabled"
    Title="TWS">

    <ShellContent ContentTemplate="{DataTemplate views:CustomerDetailPage}" Route="CustomerDetailPage"/>
    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate views:HomePage}"
                  Route="HomePage" />
    <ShellContent ContentTemplate="{DataTemplate views:LabelPage}" Route="LabelPage"/>
    <ShellContent
        Route="InvoicePage"
        ContentTemplate="{DataTemplate views:InvoicePage}" />
</Shell>
